#!/bin/bash

# Market Data Service Startup Script

set -e

echo "ğŸš€ Starting Market Data Service..."

# Check if .env file exists
if [ ! -f .env ]; then
    echo "ğŸ“ Creating .env file from template..."
    cp .env.docker .env
    echo "âš ï¸  Please update the ALPHA_VANTAGE_API_KEY in .env file"
fi

# Create necessary directories
echo "ğŸ“ Creating directories..."
mkdir -p logs
mkdir -p scripts

# Build and start services
echo "ğŸ”¨ Building and starting services..."
docker-compose down --remove-orphans
docker-compose build --no-cache
docker-compose up -d

# Wait for services to be healthy
echo "â³ Waiting for services to be healthy..."
sleep 30

# Check service health
echo "ğŸ” Checking service health..."
docker-compose ps

# Display service URLs
echo ""
echo "âœ… Services are starting up!"
echo ""
echo "ğŸ“ Service URLs:"
echo "   API Server: http://localhost:8000"
echo "   API Docs: http://localhost:8000/docs"
echo "   Adminer (DB): http://localhost:8080"
echo "   Health Check: http://localhost:8000/health"
echo ""
echo "ğŸ“Š To view logs:"
echo "   All services: docker-compose logs -f"
echo "   API only: docker-compose logs -f api"
echo "   Consumer only: docker-compose logs -f consumer"
echo ""
echo "ğŸ›‘ To stop services:"
echo "   docker-compose down"
echo ""

# Test API health
echo "ğŸ¥ Testing API health..."
sleep 10
curl -f http://localhost:8000/health || echo "âš ï¸  API not ready yet, please wait a moment"

echo "ğŸ‰ Startup complete!"
